{
  "version": 2,
  "buildCommand": "npm ci && npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/api/:path*", "destination": "https://facerec.alwaysdata.net/api/:path*" },
    { "source": "/uploads/:path*", "destination": "https://facerec.alwaysdata.net/uploads/:path*" },
    { "source": "/socket.io/:path*", "destination": "https://facerec.alwaysdata.net/socket.io/:path*" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ]
}
